@model IEnumerable<BackstageMusic.Models.Invitation>

@{
    ViewBag.Title = "Listado de invitaciones";
    ViewBag.Description = "Invitaciones";
}
<div class="row">
    <div class="col">
        <section class="card">
            <header class="card-header">
                <h2 class="card-title">@ViewBag.Title</h2>
            </header>
            <div class="card-body">
                <table class="table table-bordered table-striped mb-0" id="datatable-tabletools">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Invitee.username)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Inviter.username)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.accepted_on)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.active)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.created_at)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.updated_at)
                            </th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Invitee.username)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Inviter.username)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.accepted_on)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.active)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.created_at)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.updated_at)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.id_invitation }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.id_invitation })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </section>
    </div>
</div>