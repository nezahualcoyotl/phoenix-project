@model IEnumerable<BackstageMusic.Models.Platform>

@{
    ViewBag.Title = "Listado de plataformas";
    ViewBag.Description = "Plataformas";
}
<div class="row">
    <div class="col">
        <section class="card">
            <header class="card-header">
                <div class="card-actions">
                    <a href="/Platform/Create"><button type="button" class="btn btn-primary btn-sm">Nuevo</button></a>
                </div>
                <h2 class="card-title">@ViewBag.Title</h2>
            </header>
            <div class="card-body">
                <table class="table table-bordered table-striped mb-0" id="datatable-tabletools">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.photo_url)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.active)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.created_at)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.updated_at)
                            </th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.photo_url)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.active)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.created_at)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.updated_at)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.id_platform }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.id_platform })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </section>
    </div>
</div>