
@{
    ViewBag.Title = "Login";
    Layout = null;
}

<!doctype html>
<html class="fixed">
<head>
    <!-- Basic -->
    <meta charset="UTF-8">

    <meta name="keywords" content="HTML5 Admin Template" />
    <meta name="description" content="Porto Admin - Responsive HTML5 Template">
    <meta name="author" content="okler.net">

    <!-- Mobile Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />

    <!-- Web Fonts  -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700,800|Shadows+Into+Light" rel="stylesheet" type="text/css">

    @Styles.Render("~/vendor/css")
    @Styles.Render("~/theme/css")
    @Scripts.Render("~/modernizr/js")
</head>
<body>
    <!-- start: page -->
    <section class="body-sign">

        <div class="center-sign">

            <a href="/" class="logo float-left">
                <img src="~/Content/img/backstageLogo.png" height="54" alt="Backstage Logo" />
            </a>

            <div class="panel card-sign">
                <div class="card-title-sign mt-3 text-right">
                    <h2 class="title text-uppercase font-weight-bold m-0"><i class="fas fa-user mr-1"></i> INGRESAR</h2>
                </div>
                <div class="card-body">
                    @if (TempData["UserCreated"] != null)
                    {
                        <div class="alert alert-success">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                            <strong>¡Usuario creado con éxito!</strong>
                        </div>
                    }
                    <form action="index.html" method="post">
                        <div class="form-group mb-3">
                            <label>Usuario <span class="required">*</span></label>
                            <div class="input-group">
                                <input id="username" name="username" placeholder="Usuario" class="form-control form-control-lg" required />
                                <span class="input-group-append">
                                    <span class="input-group-text">
                                        <i class="fas fa-user"></i>
                                    </span>
                                </span>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <div class="clearfix">
                                <label class="float-left">Constraseña <span class="required">*</span></label>
                                <a href="/Signup" tabindex="-1" class="float-right">Recuperar contraseña</a>
                            </div>
                            <div class="input-group">
                                <input id="password" name="password" type="password" placeholder="Contraseña" class="form-control form-control-lg" required />
                                <span class="input-group-append">
                                    <span class="input-group-text">
                                        <i class="fas fa-lock"></i>
                                    </span>
                                </span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-8">

                            </div>
                            <div class="col-sm-4 text-right">
                                <input class="btn btn-primary mt-2" type="button" value="Ingresar" onclick="Validate()">
                            </div>
                        </div>
                        <p class="text-center mt-3 mb-3">
                            ¿Aún no tienes cuenta?<a href="@Url.Action("Register", "User")"> ¡Regístrate!</a>
                        </p>


                    </form>
                </div>
            </div>

            <p class="text-center text-muted mt-3 mb-3">&copy; Copyright 2019. All Rights Reserved.</p>
        </div>
    </section>
</body>
</html>
@Scripts.Render("~/vendor/js")
@Scripts.Render("~/theme/js")
<script src="~/Content/js/login.js"></script>